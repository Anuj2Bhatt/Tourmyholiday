{
  "name": "tourmyholiday-backend",
  "version": "1.0.0",
  "description": "Backend for TourMyHoliday application",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate:villages": "node src/database/migrate.js",
    "migrate": "node migrate.js",
    "migrate:all": "node migrate.js",
    "migrate:list": "node migrate.js --list",
    "migrate:specific": "node migrate.js --specific",
    "migrate:hotels": "node migrations/migrate-hotel-amenities.js && node migrations/update-hotel-amenities.js",
    "migrate:culture": "node migrations/create-india-culture-info-table.js",
    "migrate:bonfire": "node migrations/add-default-bonfire.js",
    "migrate:fix": "node migrations/fix-amenities.js",
    "migrate:database": "node database/migrations/20240320_add_highlights_to_villages.js && node database/migrations/20240320_fix_highlights_column.js && node database/migrations/20240320_fix_highlights_constraint.js && node database/migrations/20240320_update_villages_images.js && node database/migrations/20240321_update_state_foreign_keys.js",
    "migrate:reset": "npm run migrate:all && npm run migrate:database",
    "db:setup": "npm run migrate:reset"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "nodemon": "^2.0.22",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
